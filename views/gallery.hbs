<div class="w-full container mx-auto my-20 bg-indigo-100 rounded p-5 relative">
  <h1 class="text-xl mb-10">Gallery</h1>
  <div class="grid grid-cols-5">
  {{#each images}}
    <div>
      <img class="mx-auto max-h-60 p-4" src="{{this}}" alt="">
    </div>
  {{else}}
    <div>No images</div>
  {{/each}}
  </div>
  <hr class="bg-blue-900 h-1 w-full my-4">
  <form method="post" enctype="multipart/form-data" action="/gallery">
    <input class="mb-2" type="file" name="image" accept="image/*">
    <input class="w-full bg-indigo-700 hover:bg-pink-700 text-white font-bold py-2 px-4 mb-6 rounded transition cursor-pointer" type="submit">
  </form>
</div>
